@model IEnumerable<MoneyApp.Models.Staff>

<br />
<div class="container-fluid">
    <h4 class="text-center text-uppercase">List of staff</h4>

    <p>
        <a asp-action="Create" class="btn btn-sm btn-secondary rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i> Add New</a>
    </p>

    <p>
        <form method="get">
            @*<div class="input-group">
                    <input type="text" class="form-control" placeholder="Employee's name" asp-for="SearchTerm" aria-label="Employee's username" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <span class="input-group-text btn-primary" id="basic-addon2">Search</span>
                    </div>
                </div>*@
        </form>
    </p>
    <div class="card-deck">
        @foreach (var employee in Model)
        {
            var photopath = "~/images/" + (@employee.ProfilePicture ?? "noimage.jpg");
            <div class="card m-3" style="min-width:18rem; max-width:30.5%">
                <div class="card-header">
                    <h3>@employee.FullName</h3>
                </div>

                <img class="card-img-top imageThumbnail" src="@photopath" asp-append-version="true" alt="Card image cap" />
                <div class="card-footer text-center">
                    <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger m-1">Delete</a>
                </div>

            </div>
        }
    </div>
</div>



